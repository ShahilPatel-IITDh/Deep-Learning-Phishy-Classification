<script>
(() => {
    

    const formInput = document.querySelector('.twitter-typeahead #query');
    const removeBtnEx = document.querySelector('.fb-remove-btn');
    const typeSelector = document.querySelectorAll('.search-buttons-param .tabs__link-overlay');
    const formIdentHiddenInput = document.querySelector('.module-search form > input:nth-child(3)');
    const ttmenu = document.querySelector('.twitter-typeahead .tt-menu');
    
    if (formInput && removeBtnEx) {
        formInput.addEventListener('keyup', () => {
            if (formInput.value.length > 2) {
                removeBtnEx.classList.add('active');
            } else {
                removeBtnEx.classList.remove('active');
            }
        })
        removeBtnEx.addEventListener('click', () => {
            formInput.value = '';
            removeBtnEx.classList.remove('active');
        })
        formInput.setAttribute('autofocus', 'false');
    }
    if (typeSelector) {
        typeSelector.forEach(element => {
            element.addEventListener('click', () => {
                typeSelector.forEach(el => {
                    el.classList.remove('active');
                });
                element.classList.add('active');
                let nameV = element.getAttribute('name');
                let valueV = element.getAttribute('value');
                formIdentHiddenInput.setAttribute('name', nameV);
                formIdentHiddenInput.setAttribute('value', valueV);
            })
        });
    }
    if (ttmenu) {
        ttmenu.classList.remove('tt-open');
    }
    const formId = document.querySelector("#component_370972");
    const formIdInternal = document.querySelector("#component_370972 .module-search form");
    if (formId) {
        formId.style.display = "block";
    }
    if (formIdInternal) {
        formIdInternal.setAttribute("action", "https://www.lsbu.ac.uk/search");
    }
})();    
</script>

